<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/backpic">

    <Button
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="Harvest"
        android:id="@+id/harvestButton"
        android:background="#60000000"
        android:textColor="#FFFBFBFB"
        android:layout_marginTop="111dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="Disease"
        android:id="@+id/diseaseButton"
        android:layout_below="@+id/harvestButton"
        android:layout_marginTop="15dp"
        android:background="#60000000"
        android:textColor="#FFFBFBFB"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:background="#60000000"
        android:textColor="#FFFBFBFB"
        android:text="Income"
        android:id="@+id/incomeButton"
        android:layout_below="@+id/diseaseButton"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>